generator client {
  provider = "prisma-client"
  output   = "./client"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id             Int      @id @default(autoincrement())
  code           String   @unique

  target_url     String
  clicks         Int      @default(0)
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
  last_clicked_at DateTime?
  deleted_at     DateTime?
}
